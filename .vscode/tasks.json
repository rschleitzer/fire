{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "rust: cargo build"
		},
		{
			"type": "cargo",
			"command": "run",
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo run",
			"options": {
				"env": {
					"DATABASE_URL": "postgres://postgres:postgres@localhost:5432/fhir",
					"RUST_LOG": "fire=debug,tower_http=debug,sqlx=info"
				}
			}
		},
		{
			"type": "shell",
			"command": "pkill",
			"args": [
				"-f",
				"target/debug/fire"
			],
			"label": "fire: stop server",
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"type": "cargo",
			"command": "test",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"label": "rust: cargo test",
			"options": {
				"env": {
					"DATABASE_URL": "postgres://postgres:postgres@localhost:5432/fhir_test"
				}
			}
		},
		{
			"type": "cargo",
			"command": "check",
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo check"
		},
		{
			"type": "cargo",
			"command": "clippy",
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo clippy"
		},
		{
			"type": "shell",
			"command": "docker",
			"args": [
				"compose",
				"up",
				"postgres",
				"-d"
			],
			"label": "docker: start postgres",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"command": "docker",
			"args": [
				"compose",
				"stop",
				"postgres"
			],
			"label": "docker: stop postgres",
			"problemMatcher": []
		}
	]
}